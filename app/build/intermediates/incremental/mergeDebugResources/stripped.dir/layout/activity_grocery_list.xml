<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="snd.orgn.foodnfine.activity.GroceryListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_grocery"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@color/white"
        android:elevation="@dimen/_6sdp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/grocery_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeOverlay.AppCompat.Dark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_restaurant_back"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_6sdp"
                        app:tint="@color/dashboardDeepColor"
                        android:src="@drawable/ic_left_back"
                        android:layout_marginStart="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_sendPackage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_light"
                            android:text="Daily Grocery"
                            android:textColor="@color/dashboardDeepColor"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_6sdp" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center"
                            android:id="@+id/tv_numberOfStore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_light"
                            android:textColor="@color/dashboardDeepColor"
                            android:textSize="@dimen/_7sdp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/filter"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/funnel"
                    app:tint="@color/dashboardDeepColor" />

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:textColor="@color/dashboardDeepColor"
                        android:text="Near Me "
                        android:fontFamily="@font/roboto_medium"
                        android:switchMinWidth="@dimen/_40sdp"
                        android:theme="@style/SwitchStyle"
                        android:textOff="OFF"
                        android:textOn="ON" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_light"
                        android:textColor="@color/dashboardDeepColor"
                        android:textSize="@dimen/_7sdp"
                        android:textStyle="bold"
                        android:text="@string/distance_within"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_grocery"
        android:background="@color/cream"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_dataAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recyclerViewGrocery"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <include layout="@layout/layout_no_restaurent_found" />

        <include
            android:id="@+id/layout_grocery_fetchingData"
            layout="@layout/layout_fetching_data"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
