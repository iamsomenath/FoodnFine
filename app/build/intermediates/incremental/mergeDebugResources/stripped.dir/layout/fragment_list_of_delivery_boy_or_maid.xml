<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.ListOfDeliveryBoyOrMaidService">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_colo_black"
        android:textSize="@dimen/_14sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:gravity="center"
        android:fontFamily="@font/opensans_semibold"
        android:text="Select available person you would like to take service." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recyclerView_maidList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tvBtn_verify_continue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_above="@id/background"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="center"
        android:visibility="visible"
        app:cardBackgroundColor="@color/button_color"
        app:cardCornerRadius="@dimen/_18sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBtn_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Next"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_right_back" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:src="@drawable/footer_bg_img"
        android:scaleType="fitXY"
        android:layout_height="@dimen/_60sdp" />

</RelativeLayout>