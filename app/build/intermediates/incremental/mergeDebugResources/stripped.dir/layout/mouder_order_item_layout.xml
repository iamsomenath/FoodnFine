<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:visibility="gone">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/rv_restaurantImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo_restaurant"
                        app:riv_corner_radius="@dimen/_2sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/orderlist"
                                android:drawableLeft="@drawable/orderlist"
                                android:fontFamily="@font/roboto_light"
                                android:text="Order No:"
                                android:textAllCaps="true"
                                android:textColor="@color/hintTextColor"
                                android:textSize="@dimen/_10sdp">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_orderNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:fontFamily="@font/roboto_light"
                                android:padding="@dimen/_2sdp"
                                android:text="164921054"
                                android:textColor="@color/text_colo_black"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="0.5"
                            android:gravity="center|end"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|end"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/TextAppearance.AppCompat.Medium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center|end"
                                    android:text="Type:"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="@dimen/_8sdp">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_orderType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:layout_weight="0.4"
                                    android:fontFamily="@font/roboto_light"
                                    android:padding="@dimen/_2sdp"
                                    android:text="restaurent"
                                    android:textColor="@color/text_colo_black"
                                    android:textSize="@dimen/_8sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_restaurantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="Goli vada pav"
                            android:textColor="@color/dashboardlightColor"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_restaurantAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:drawableLeft="@drawable/address"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="left"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text=" Kolkata, Sector 15"
                        android:textColor="@color/hintTextColor"
                        android:textSize="@dimen/normal_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_orderlist_date"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableStart="@drawable/dateandtime"
                                android:drawableLeft="@drawable/dateandtime"
                                android:fontFamily="@font/roboto_light"
                                android:text="03 july 2019 at 12:47PM"
                                android:textAllCaps="true"
                                android:textColor="@color/hintTextColor"
                                android:textSize="@dimen/_8sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.35"
                                android:fontFamily="@font/roboto_light"
                                android:gravity="center|end"
                                android:text="Pay Mode:"
                                android:textColor="@color/hintTextColor"
                                android:textSize="@dimen/_8sdp"/>

                            <TextView
                                android:id="@+id/tv_pay_mode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:layout_weight="0.65"
                                android:fontFamily="@font/roboto_light"
                                android:gravity="center"
                                android:text="COD"
                                android:textColor="@color/text_colo_black"
                                android:textSize="@dimen/_8sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_restaurantFoodType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Street Food"
                        android:textColor="@color/text_colo_black"
                        android:textSize="@dimen/normal_text_size"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/broder_height"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/broderColor">

            </View>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Items"
                    android:textAllCaps="true"
                    android:textColor="@color/hintTextColor"
                    android:textSize="@dimen/_8sdp">

                </TextView>

                <LinearLayout
                    android:id="@+id/layout_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:padding="@dimen/_2sdp"
                            android:text="Name"
                            android:textColor="@color/hintTextColor"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="Quantity"
                            android:textColor="@color/hintTextColor"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="Price"
                            android:textColor="@color/hintTextColor"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_itemList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/tv_package_content_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:padding="@dimen/_2sdp"
                    android:text="1 x pav bhaji, 2 x Classic "
                    android:textColor="@color/text_colo_black"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/broder_height"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@color/broderColor">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/roboto_light"
                        android:text="Total Amount"
                        android:textAllCaps="true"
                        android:textColor="@color/hintTextColor"
                        android:textSize="@dimen/_8sdp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_totalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center|end"
                        android:padding="@dimen/_2sdp"
                        android:text="Rs. 380.00"
                        android:textColor="@color/text_colo_black"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/_16sdp" />

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/broder_height"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/broderColor">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/roboto_light"
                            android:text="Payment Status:"
                            android:textColor="@color/hintTextColor"
                            android:textSize="@dimen/_8sdp">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_payment_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/roboto_light"
                            android:padding="@dimen/_2sdp"
                            android:text="Pendeing"
                            android:textColor="#C93B3B"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/roboto_light"
                            android:text="Order Status:"
                            android:textColor="@color/hintTextColor"
                            android:textSize="@dimen/_8sdp">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_orderStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/roboto_light"
                            android:padding="@dimen/_2sdp"
                            android:text="Pendeing"
                            android:textColor="#C93B3B"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="Remarks:"
                        android:textColor="@color/hintTextColor"
                        android:textSize="@dimen/_8sdp">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_remarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:padding="@dimen/_2sdp"
                        android:text="Pending"
                        android:textColor="@color/text_colo_black"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_pickup_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/address"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="  Pickup Address:"
                        android:textColor="@color/hintTextColor"
                        android:textSize="@dimen/normal_text_size" />

                    <TextView
                        android:id="@+id/tv_orderList_pickupAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:padding="@dimen/_2sdp"
                        android:text="Pending"
                        android:textColor="@color/text_colo_black"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/address"
                        android:drawableLeft="@drawable/address"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="  Delivery Address:"
                        android:textColor="@color/hintTextColor"
                        android:textSize="@dimen/normal_text_size" />

                    <TextView
                        android:id="@+id/tv_orderList_deliveryAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:padding="@dimen/_2sdp"
                        android:text="Pending"
                        android:textColor="@color/text_colo_black"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/broder_height"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/broderColor">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/tv_deliveryStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="Delivered "
                        android:textColor="@color/text_colo_black"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:visibility="gone"
                    android:id="@+id/cancelOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:background="@color/red_error"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:text="Cancel Order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>