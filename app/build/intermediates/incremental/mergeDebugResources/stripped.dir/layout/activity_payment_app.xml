<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PaymentSwadesiProduct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="2dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/checkout_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Payment Options"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18sdp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_payment_home_paymentoption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:padding="10dp"
            android:text=" Select Payment Option"
            android:textColor="@color/red"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:id="@+id/layout_payment_home_paymentoption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:id="@+id/rb_payment_option_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/dashboardDeepColor"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="My Wallet            "
                    android:textColor="@color/dashboardDeepColor"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/rb_payment_option_op"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/dashboardDeepColor"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Online Payment  "
                    android:textColor="@color/dashboardDeepColor"
                    android:textSize="@dimen/_17sdp" />

                <RadioButton
                    android:id="@+id/rb_payment_option_cod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/dashboardDeepColor"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Cash On Delivery"
                    android:textColor="@color/dashboardDeepColor"
                    android:textSize="@dimen/_17sdp" />

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_payment_home"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/round1"
            android:padding="@dimen/_10sdp"
            android:text="@string/proceed"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>

</RelativeLayout>
