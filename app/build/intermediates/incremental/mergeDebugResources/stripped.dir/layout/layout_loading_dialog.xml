<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutHeight_loadingDialog"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:background="@color/backgroundColor_white_translucent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_loadingDialog_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_3sdp"
            android:src="@drawable/delivery"/>

    <TextView
        android:id="@+id/tv_loadingDialog_mainContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:padding="@dimen/_16sdp"
        android:text="Content loading. Please wait..."
        android:textColor="@color/colorTranslucentButton"
        android:textSize="@dimen/_10sdp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/colorTranslucentButton"/>

    </LinearLayout>

</RelativeLayout>