<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/complain"
        android:drawableStart="@drawable/complain"
        android:fontFamily="@font/proxima_nova_light"
        android:gravity="start"
        android:layout_margin="3dp"
        android:padding="@dimen/_10sdp"
        android:text="   Replace Cart?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        android:fontFamily="@font/proxima_nova_light"
        android:gravity="start"
        android:padding="10dp"
        android:textSize="@dimen/_13sdp"
        android:text="There are items in the cart from other Shop. Do you want to replace them?"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_weight="1"
            android:background="#000000"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/proxima_nova_light"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2" />

        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_weight="1"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/proxima_nova_light"
            android:textColor="@color/white"
            android:background="@color/button_green"
            android:gravity="center"
            android:text="Replace" />

    </LinearLayout>

</LinearLayout>