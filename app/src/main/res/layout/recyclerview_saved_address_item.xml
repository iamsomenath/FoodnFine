<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardBackgroundColor="#ececec"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.75">

                <ImageView
                    android:id="@+id/iv_addressTypeImage"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"

                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_typeOfAddress"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="Home"
                            android:textColor="#9b41f9"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:padding="@dimen/_2sdp"
                            android:id="@+id/tv_saveAddress_line1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="@dimen/_8sdp"
                            android:textStyle="normal"
                            android:textColor="#2b2b2b"
                            android:text="sector 52 Noida sector 52 Metro"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.8">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_editBtn"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:elevation="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_12sdp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_edit"
                                android:padding="@dimen/_6sdp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_saveAddress_line3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="#999999"
                            android:text="sector 52 Noida sector 52 Metro"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_saveAddress_line4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="#999999"
                            android:text="Uttar pradesh 201301,India"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_saveAddress_line2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="#999999"
                            android:text="station bdfjhbd"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.8">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_deleteBtn"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:elevation="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_12sdp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_delete_forever_black_24dp"
                                android:padding="@dimen/_2sdp"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>